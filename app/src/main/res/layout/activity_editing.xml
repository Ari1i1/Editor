<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    tools:context=".EditingActivity">

    <!--viewing the image from camera or gallery-->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="413dp"
        android:layout_height="524dp"
        android:background="#00222222"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.425" />

    <!--saving button-->

    <!--effects button-->

    <ImageButton
        android:id="@+id/saveButton"
        android:layout_width="75dp"
        android:layout_height="64dp"
        android:backgroundTint="#00FFFFFF"
        android:tint="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.997"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:srcCompat="@drawable/ic_save" />

    <ImageButton
        android:id="@+id/effectsButton"
        android:layout_width="66dp"
        android:layout_height="61dp"
        android:backgroundTint="#00FFFFFF"
        android:tint="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.931"
        app:srcCompat="@drawable/ic_editing" />

    <!--rotating button-->
    <ImageButton
        android:id="@+id/rotateButton"
        android:layout_width="64dp"
        android:layout_height="61dp"
        android:backgroundTint="#00FFFFFF"
        android:tint="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.216"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.931"
        app:srcCompat="@drawable/ic_rotate" />

    <!--scaling button-->

    <!--retouch button-->

    <ImageButton
        android:id="@+id/scalingButton"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:backgroundTint="#00FFFFFF"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.931"
        app:srcCompat="@drawable/ic_scaling" />

    <ImageButton
        android:id="@+id/retouchButton"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:backgroundTint="#00FFFFFF"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.622"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.931"
        app:srcCompat="@drawable/ic_retouch" />

    <!--segmentation button-->
    <ImageButton
        android:id="@+id/segmentationButton"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:backgroundTint="#00FFFFFF"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.814"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.931"
        app:srcCompat="@drawable/ic_segmentation" />

    <!--undo button-->
    <ImageButton
        android:id="@+id/undoButton"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:backgroundTint="#00FFFFFF"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.014"
        app:srcCompat="@drawable/ic_undo" />

    <TextView
        android:id="@+id/effects"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:text="@string/effects"
        android:textColor="@color/colorAccent"
        android:textSize="13sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/effectsButton"
        app:layout_constraintVertical_bias="0.178" />

    <TextView
        android:id="@+id/rotating"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:text="@string/rotating"
        android:textColor="@color/colorAccent"
        android:textSize="13sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.204"
        app:layout_constraintStart_toStartOf="@+id/effects"
        app:layout_constraintTop_toBottomOf="@+id/rotateButton"
        app:layout_constraintVertical_bias="0.178" />

    <TextView
        android:id="@+id/scaling"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:text="@string/scaling"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scalingButton"
        app:layout_constraintVertical_bias="0.178" />

    <TextView
        android:id="@+id/retouch"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:text="@string/retouch"
        android:textColor="@color/colorAccent"
        android:textSize="13sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.622"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/retouchButton"
        app:layout_constraintVertical_bias="0.178" />

    <TextView
        android:id="@+id/segmentation"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:text="@string/segmentation"
        android:textColor="@color/colorAccent"
        android:textSize="13sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.814"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/segmentationButton"
        app:layout_constraintVertical_bias="0.178" />

    <TextView
        android:id="@+id/save"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:textColor="@color/colorAccent"
        android:textSize="13sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.997"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveButton"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/undo"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:text="@string/undo"
        android:textColor="@color/colorAccent"
        android:textSize="13sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/undoButton"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>