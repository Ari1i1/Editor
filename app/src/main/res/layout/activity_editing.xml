<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:theme="@style/AppTheme"
    tools:context=".EditingActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="410dp"
        android:layout_height="533dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.454" />

    <ImageButton
        android:id="@+id/saveButton"
        android:layout_width="75dp"
        android:layout_height="64dp"
        android:backgroundTint="#00FFFFFF"
        android:tint="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.979"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_save" />

    <ImageButton
        android:id="@+id/effectsButton"
        android:layout_width="66dp"
        android:layout_height="61dp"
        android:backgroundTint="#00FFFFFF"
        android:tint="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.002"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.941"
        app:srcCompat="@drawable/ic_effects" />

    <ImageButton
        android:id="@+id/rotateButton"
        android:layout_width="64dp"
        android:layout_height="61dp"
        android:backgroundTint="#00FFFFFF"
        android:tint="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.216"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.941"
        app:srcCompat="@drawable/ic_rotate" />

    <ImageButton
        android:id="@+id/scalingButton"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:backgroundTint="#00FFFFFF"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.941"
        app:srcCompat="@drawable/ic_scaling" />

    <ImageButton
        android:id="@+id/retouchButton"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:backgroundTint="#00FFFFFF"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.622"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.941"
        app:srcCompat="@drawable/ic_retouch" />

    <ImageButton
        android:id="@+id/segmentationButton"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:backgroundTint="#00FFFFFF"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.814"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.941"
        app:srcCompat="@drawable/ic_segmentation" />

    <ImageButton
        android:id="@+id/filtrationButton"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:backgroundTint="#00FFFFFF"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.941"
        app:srcCompat="@drawable/ic_filtration" />

    <ImageButton
        android:id="@+id/undoButton"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:backgroundTint="#00FFFFFF"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.737"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004"
        app:srcCompat="@drawable/ic_undo" />

    <TextView
        android:id="@+id/effectsText"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:text="@string/effects"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.002"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/effectsButton"
        app:layout_constraintVertical_bias="0.238" />

    <TextView
        android:id="@+id/rotatingText"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:text="@string/rotating"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.216"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rotateButton"
        app:layout_constraintVertical_bias="0.238" />

    <TextView
        android:id="@+id/scalingText"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:text="@string/scaling"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scalingButton"
        app:layout_constraintVertical_bias="0.238" />

    <TextView
        android:id="@+id/retouchText"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:text="@string/retouch"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.622"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/retouchButton"
        app:layout_constraintVertical_bias="0.238" />

    <TextView
        android:id="@+id/segmentationText"
        android:layout_width="61dp"
        android:layout_height="31dp"
        android:text="@string/segmentation"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.814"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/segmentationButton"
        app:layout_constraintVertical_bias="0.238" />

    <TextView
        android:id="@+id/filtrationText"
        android:layout_width="61dp"
        android:layout_height="31dp"
        android:text="@string/filtration"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filtrationButton"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/saveText"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.979"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveButton"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/undoText"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:text="@string/undo"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="13sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.737"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/undoButton"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>